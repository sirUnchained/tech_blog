            <div class="collapse navbar-collapse" id="navbarCollapse">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <a class="nav-link" href="/">Home</a>
                </li>
                <li
                  class="nav-item dropdown has-submenu menu-large hidden-md-down hidden-sm-down hidden-xs-down"
                >
                  <a
                    class="nav-link dropdown-toggle"
                    href="#"
                    id="dropdown01"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                    >News</a
                  >
                  <ul
                    class="dropdown-menu megamenu"
                    aria-labelledby="dropdown01"
                  >
                    <li>
                      <div class="container">
                        <div
                          class="mega-menu-content clearfix p-3"
                          style="
                            max-width: 65rem;
                            background-color: rgb(243, 243, 243);
                            --darkreader-inline-bgcolor: #1f2123;
                          "
                        >
                          <% categories.forEach(cat => { %>
                          <a class="m-2" href="/category/<%= cat.name %>">
                            <%= cat.name %>
                          </a>
                          <% }) %>
                        </div>
                        <!-- end mega-menu-content -->
                      </div>
                    </li>
                  </ul>
                </li>
                <li class="nav-item">
                                    <a class="nav-link" href="/contact">Contact Us</a>
                </li>
                <% if(currentUser) { %>
                <li class="nav-item">
                  <a
                    class="nav-link"
                    href="/user/profile/<%= currentUser.username %>"
                    ><%= currentUser.username %></a
                  >
                </li>
                <% } else{ %>
                <li class="nav-item">
                  <a class="nav-link" href="/auth">login</a>
                </li>
                <% } %>
              </ul>
            </div>
          </nav>
        </div>
        <!-- end container-fluid -->
      </header>
